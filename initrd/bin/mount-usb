#!/bin/sh
# Mount a USB device
. /etc/functions

enable_usb

if ! lsmod | grep -q usb_storage; then
	insmod /lib/modules/usb-storage.ko \
	|| die "usb_storage: module load failed"
	sleep 5
fi

if [ ! -d /media ]; then
	mkdir /media || die "Unable to create /media directory"
fi

if [ -z "$1" ]; then
	mount -o ro /media || die "Unable to mount /media in Read Only mode"
else
	mount -o ro $1 /media || die "unable to mount $1 on /media in Read Only mode"
fi
